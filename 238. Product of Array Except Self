class Solution(object):
    def productExceptSelf(self, nums):
        """
        :type nums: List[int]
        :rtype: List[int]
        """
        answer = [1] * len(nums)
        product = 1
        zero = 0

        for num in nums:
            if num == 0:
                zero += 1
                continue
            product = product * num
        
        if zero > 1:
            for i in range(len(nums)):
                answer[i] = 0
        elif zero == 1:
            for i in range(len(nums)):
                if nums[i] == 0:
                    answer[i] = product
                else:
                    answer[i] = 0
        else:
            for i in range(len(nums)):
                answer[i] = product / nums[i]
                
        return answer

        
